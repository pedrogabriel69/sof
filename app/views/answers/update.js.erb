<% if @answer.errors.present? %>
  $('.answer_errors').html("<%= j render 'common/errors', resource: @answer %>");
<% else %>
  $('#answer_<%= @answer.id %>').html("<%= j render 'questions/answers', answer: @answer %>");
  $('.edit-answer-link').click(function(e){
    e.preventDefault();
    $(this).hide();
    answer_id = $(this).data('answerId');
    $("form#edit-answer-" + answer_id).show();
  });
<% end %>
