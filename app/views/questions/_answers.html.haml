- if answer.persisted?
  %br/
  %strong= answer.user.name
  %br
  = answer.body
  .col-md-offset-10.col-md-2
    - if user_signed_in? && current_user.author?(answer)
      = link_to 'Edit', "#"
      |
      = link_to 'Delete', [@question, answer], method: :delete, remote: true

  #edit-answer-form{:style => "display:none;"}
    = simple_form_for([@question, answer], remote: true) do |f|
      .answer_errors
      = f.input :body, label: false, placeholder: 'Your answer'
      = f.submit "Edit", class: "btn btn-primary btn-sm"
%hr/
