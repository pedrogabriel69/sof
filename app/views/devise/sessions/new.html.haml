.container
  .row
    .col-md-offset-3.col-md-6.col-md-offset-3
      = bootstrap_devise_error_messages!(resource)
      .panel.panel-default.devise-bs
        .panel-heading
          %h4= t('.sign_in', :default => "Sign in")
        .panel-body
          = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f|
            .form-group
            = f.input :email, label: false, placeholder: 'Email'
            = f.input :password, label: false, placeholder: 'Password'
            - if devise_mapping.rememberable?
              .checkbox
                = f.label :remember_me do
                  = f.check_box :remember_me
                  = t('.remember_me', :default => "Remember me")
            = f.submit  t('.sign_in', :default => "Sign in"), class: "btn btn-primary"
            = link_to 'Sign up', new_registration_path(resource_name), class: 'btn btn-success'
      = render "devise/shared/links"
